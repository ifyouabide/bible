{
  "name": "bible",
  "devDependencies": {
    "cpy-cli": "^3.1.1",
    "google-closure-compiler": "^20200614.0.0",
    "http-server": "^0.12.3",
    "npm-run-all": "^4.1.5"
  },
  "type": "module",
  "scripts": {
    "build-app-deps:lsv": "python src/processing/lsv/lsv.py",
    "build-app:html": "node \"src/build.js\"",
    "build-app:js": "google-closure-compiler src/app/*.js src/common/*.js --js_output_file=build/main.js --compilation_level=ADVANCED_OPTIMIZATIONS --language_out=ECMASCRIPT6",
    "build-app:other": "cpy \"src/app/favicon.ico\" build",
    "build": "npm-run-all -p build-app-deps:* build-app:*",
    "http-server": "http-server",
    "serve": "http-server build -p 8000 -c-1",
    "serve-dev": "npm-run-all -p \"http-server -- src/app -c-1 --proxy http://localhost:8080 -p 8000\" \"http-server -- src -p 8080 -c-1 --proxy http://localhost:8090\" \"http-server -- build -p 8090 -c-1\"",
    "push": "gsutil rsync -R build gs://lsvbible"
  }
}
